{
    "name": "tabconvertleftchar",
    "displayName": "TabConvertLeftChar for Markdown",
    "description": "Use Tab to conditionally convert the preceding characters of selections.",
    "version": "0.0.1",
    "publisher": "zh4ui",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "contributes": {
        "commands":
            [{
                "command": "tabConvertLeftChar",
                "title": "TabConvertLeftChar"
            }
        ],
        "keybindings": [
            {
                "command": "tabConvertLeftChar",
                "key": "tab",
                "when": "editorLangId == 'markdown' && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "TabConvertLeftChar configuration",
            "properties": {
                "tabconvertleftchar.markdown": {
                    "type": "object",
                    "default": {
                        /* an example conversion table 
                        "。": ".",
                        "，": ",",
                        "；": ";",
                        "·" : "`",
                        "【": "[",
                        "】": "]",
                        "‘": "'",
                        "’": "'"
                        */
                    },
                    "description": "Conversion table for markdown."
                }
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
