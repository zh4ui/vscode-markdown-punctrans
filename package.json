{
    "name": "tabreplacechar",
    "displayName": "Tab Replace Characters Before Cursors",
    "description": "Press tab to replace the characters before cursors to configured ones.",
    "version": "0.0.1",
    "publisher": "zh4ui",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "url": "https://github.com/zh4ui/vscode-tabreplacechar.git",
        "type": "git"
    },
    "activationEvents": [
        "onCommand:zh4ui.tabreplacechar"
    ],
    "contributes": {
        "keybindings": [
            {
                "command": "zh4ui.tabreplacechar",
                "key": "tab",
                "when": "config.tabReplaceChar.enabled && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "tabReplaceChar configuration",
            "properties": {
                "tabReplaceChar.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the keybinding of tabReplaceChar"
                }                /*
,
                // as in https://github.com/Microsoft/vscode/issues/26707
                // vscode hasn't supported per language settings for extension configurations
                // so here uses object instead.
                "tabReplaceChar.langConversionTable": {
                    "type": "object",
                    "default": {
                        "markdown" : {
                            "。": "."
                        }
                    },
                    "description": "Speficy conversion table for each language"
                }
                "tabReplaceChar.markdown": {
                    "type": "object",
                    "default": {
                        "。": ".",
                        "，": ",",
                        "；": ";",
                        "·" : "`",
                        "【": "[",
                        "】": "]",
                        "‘": "'",
                        "’": "'"
                    },
                    "description": "Conversion table for markdown."
                }
                */
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
